# 环境变量示例文件
# 复制此文件为 .env.local 并填入实际值

# =================================
# 应用基础配置
# =================================

# 应用名称
NEXT_PUBLIC_APP_NAME="Blog-Any"

# 应用版本
NEXT_PUBLIC_APP_VERSION="1.0.0"

# 网站URL（生产环境使用实际域名）
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# =================================
# 数据库配置
# =================================

# 数据库连接字符串（如使用数据库）
# DATABASE_URL="your_database_connection_string"

# =================================
# 第三方服务配置
# =================================

# Google Analytics ID（如需要）
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# CMS 配置（如使用 Strapi, Contentful 等）
# CMS_API_URL="your_cms_api_url"
# CMS_API_KEY="your_cms_api_key"

# =================================
# 邮件服务配置
# =================================

# SMTP 配置（如需要邮件功能）
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your_email@gmail.com"
# SMTP_PASS="your_app_password"

# =================================
# 云存储配置
# =================================

# AWS S3 配置（如需要文件上传）
# AWS_ACCESS_KEY_ID="your_access_key"
# AWS_SECRET_ACCESS_KEY="your_secret_key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your_bucket_name"

# =================================
# 社交媒体配置
# =================================

# GitHub
# NEXT_PUBLIC_GITHUB_URL="https://github.com/your_username"

# Twitter
# NEXT_PUBLIC_TWITTER_URL="https://twitter.com/your_username"

# =================================
# 开发环境配置
# =================================

# 开发模式调试
# DEBUG="true"

# API 基础URL
# API_BASE_URL="http://localhost:3000/api"

# =================================
# 安全配置
# =================================

# JWT 密钥（如使用身份验证）
# JWT_SECRET="your_super_secret_jwt_key_here"

# 加密密钥
# ENCRYPT_SECRET="your_encryption_secret_here"

# =================================
# 其他配置
# =================================

# 时区设置
# TIMEZONE="Asia/Shanghai"

# 语言设置
# DEFAULT_LOCALE="zh-CN"